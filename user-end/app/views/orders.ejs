<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head.ejs %>
</head>
<body>
  <% include ./partials/header.ejs %>

  <main>
    <div class="container-fluid">
      <h2>Your Orders</h2><br>
      <% if(orders == ""){ %>
        <div class="space"></div>
        <div class="panel panel-success">
          <div class="panel-heading"></div>
          <div class="panel-body">
            <p>You Have Not Placed Any Orders Yet.</p>
          </div>
          <div class="panel-footer"></div>
        </div>
      <% } else{ %>
        <% for(i=0; i<length; i++){ %>
          <div class="space"></div>
          <div class="panel panel-success">
            <div class="panel-heading">
              <h3>Order : <%= (i+1) %></h3>
            </div>
            <div class="panel-body">
              <h4>Product Details</h4><br>
              <table class="table">
                <thead>
                  <tr>
                    <td><b>Product Name</b></td>
                    <td><b>Price</b></td>
                    <td><b>Quantity</b></td>
                  </tr>
                </thead>
                <tbody>
                  <% for(j=0; j<orders[i].uniqueProducts; j++){ %>
                    <tr>
                      <td><%= orders[i].productName[j] %></td>
                      <td><%= orders[i].productPrice[j] %></td>
                      <td><%= orders[i].productQty[j] %></td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="panel-footer" style="text-align:left;">
              <p>Order Date : <%= orders[i].orderDate %></p>
              <p>Total Items : <b><%= orders[i].quantity %></b></p>
              <p>Total Price : <b><%= orders[i].price %></b></p>
              <% if(orders[i].deliveryStatus == 1){ %>
                <p>Delivery Status : <b>Pending</b></p>
              <% }else{ %>
                <p>Delivery Status : <b>Pending</b></p>
              <% } %>
            </div>
          </div>
        <% } %>
      <% } %>
    </div>
  </main>

  <% include ./partials/footer.ejs %>
</body>
</html>
