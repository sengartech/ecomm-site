<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head.ejs %>
</head>
<body>
  <% include ./partials/header.ejs %>

  <main>
    <% include ./partials/topbar.ejs %>

    <div class="container-fluid">
      <% if(count){ %>
        <div class="row">
          <% for(i=0;i<count;i++){ %>
            <div class="col-sm-4">
              <div class="panel panel-success">
                <div class="panel-heading"><h3><%= product[i].productName %></h3></div>
                <div class="panel-body">
                  <p>Category : <%= product[i].category %></p>
                  <p>Price : <%= product[i].price %></p>
                  <p>Description : <%= product[i].description %></p>
                  <p>Quantity : <%= product[i].quantity %></p>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-default top-space" href="/admin/view-product/single/<%= product[i]._id %>">View</a>
                    <a class="btn btn-default top-space" href="/admin/edit-product/<%= product[i]._id %>">Edit</a>
                    <form id="del-form<%= i %>" class="top-margin" action="/admin/api/v1/product/delete/<%= product[i]._id %>" method="post">
                      <a class="btn btn-default" onclick="document.getElementById('del-form<%= i %>').submit();">Delete</a>
                    </form>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } else{ %>
        <p>No Data Found. Please Create Product.</p>
      <% } %>
    </div>

  </main>

  <% include ./partials/footer.ejs %>
</body>
</html>
